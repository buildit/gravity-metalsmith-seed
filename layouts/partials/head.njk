{% if not title %}{% set title = config.site.title %}{% endif %}
{% if not ogTitle %}{% set ogTitle = pageTitle %}{% endif %}
{% if not ogDescription %}{% set ogDescription = config.site.description %}{% endif %}
{% if not ogType %}{% set ogType = config.site.ogType %}{% endif %}
{% if not ogImage %}{% set ogImage = config.site.ogImage %}{% endif %}
{% if not ogImageAlt %}{% set ogImageAlt = config.site.ogImageAlt %}{% endif %}

<meta charset="UTF-8">
<title>{{ title }}</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">

<meta name="description" content="{{ description }}">
{% if build.excludeRobots %}
    <meta name="robots" content="noindex">
{% else %}
    {% if metaRobots %}
        <meta name="robots" content="{{ metaRobots }}">
    {% endif %}
{% endif %}

<meta property="og:title" content="{{ ogTitle }}">
<meta property="og:description" content="{{ ogDescription }}">
<meta property="og:site_name" content="{{ config.site.title }}">
<meta property="og:type" content="{{ ogType }}">
<meta property="og:url" content="{{ env.url }}/{% if path %}{{ path }}/{% endif %}">
<meta property="og:image" content="{{ env.url }}/images/{{ ogImage }}">
<meta property="og:image:alt" content="{{ ogImageAlt }}">

<meta name="twitter:card" content="{{ config.site.twitterCard }}"/>
<meta name="twitter:site:id" content="{{ config.site.twitterSiteId }}"/>

<link rel="stylesheet" href="/styles/index.css">

<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#051432">
<meta name="msapplication-TileColor" content="#051432">
<meta name="theme-color" content="#051432">
