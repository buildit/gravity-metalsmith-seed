---
layout: basic-page.njk
title: Example Articles
collection: colMainNav
---
<h1>{{ title }}</h1>
<ul class="grav-c-list-cards-basic">
  {% for article in colArticle %}
  <li class="grav-c-card-basic">
    <a href="/{{ article.path }}">
      {% if article.image %}
      <img src="{{ article.image.src }}" alt="{{ article.image.alt }}" />
      <svg role="img">
        <use xlink:href="#decoration-arrow-right"></use>
      </svg>
      {% endif %}
      <h3>{{ article.title }}</h3>
    </a>
    <p>{{ article.description }}</p>
  </li>
  {% endfor %}
</ul>
